            <div class="card-body">
                <form asp-action="Create" method="post">
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="position-relative form-group">
                        <label asp-for="TypeName" class="">TypeName</label>
                        <input asp-for="TypeName" id="TypeName" placeholder="Enter name" type="text" class="form-control" />
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>
                    <div class="position-relative form-group">
                        <label asp-for="RunningYear" class="">RunningYear</label>
                        <input asp-for="RunningYear" id="RunningYear" placeholder="Enter year" type="text" class="form-control" />
                        <span asp-validation-for="RunningYear" class="text-danger"></span>
                    </div>
                    <div class="position-relative form-group">
                         <div class="checkbox">
                            <label><input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)</label>
                         </div>
                    </div>
                            
                    <div class="position-relative form-group">
                        <label asp-for="CreatedDate" class="">CreatedDate</label>
                         <input asp-for="CreatedDate" id="CreatedDate" placeholder="Enter date" type="text" class="form-control" />
                         <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                    <div class="position-relative form-group">
                        <label asp-for="CreatedBy" class="">CreatedBy</label>
                          <input asp-for="CreatedBy" id="CreatedBy" placeholder="With a placeholder" type="text" class="form-control" />
                          <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    </div>
                    <div class="position-relative form-group">
                        <label asp-for="ServiceDay" class="">ServiceDay</label>
                          <input asp-for="ServiceDay" id="ServiceDay" placeholder="Enter day" type="text" class="form-control" />
                          <span asp-validation-for="ServiceDay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" />
                        <a asp-action="Index" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
     </div>
 </div>
                   
