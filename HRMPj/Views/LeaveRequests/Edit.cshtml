@model HRMPj.Models.LeaveRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-graph text-success">
                </i>
            </div>
            <div>
                Leave Request
                <div class="page-title-subheading">
                    Build whatever layout you need with our Architect framework.
                </div>
            </div>
        </div>
    </div>
</div>
<ul class="body-tabs body-tabs-layout tabs-animated body-tabs-animated nav">
    <li class="nav-item">
        <a role="tab" class="nav-link active" id="tab-0" data-toggle="tab" href="https://demo.dashboardpack.com/architectui-html-pro/elements-buttons-icons.html#tab-content-0">
            <span>Edit</span>
        </a>
    </li>
</ul>
@*<h2 class="nav-link active">Create</h2>*@
<div class="tab-content">
    <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="CurrentYear" class="control-label"></label>
                        <input asp-for="CurrentYear" class="form-control" />
                        <span asp-validation-for="CurrentYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LeaveFromDate" class="control-label"></label>
                        <input asp-for="LeaveFromDate" class="form-control" />
                        <span asp-validation-for="LeaveFromDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LeaveToDate" class="control-label"></label>
                        <input asp-for="LeaveToDate" class="form-control" />
                        <span asp-validation-for="LeaveToDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LeaveTotalDay" class="control-label"></label>
                        <input asp-for="LeaveTotalDay" class="form-control" />
                        <span asp-validation-for="LeaveTotalDay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HalfDay" class="control-label"></label>
                        <input asp-for="HalfDay" class="form-control" />
                        <span asp-validation-for="HalfDay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HalfStatus" class="control-label"></label>
                        <input asp-for="HalfStatus" class="form-control" />
                        <span asp-validation-for="HalfStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UnPaidLeaveStatus" class="control-label"></label>
                        <input asp-for="UnPaidLeaveStatus" class="form-control" />
                        <span asp-validation-for="UnPaidLeaveStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PayRollStatus" class="control-label"></label>
                        <input asp-for="PayRollStatus" class="form-control" />
                        <span asp-validation-for="PayRollStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LeaveTypeId" class="control-label"></label>
                        <select asp-for="LeaveTypeId" class="form-control" asp-items="ViewBag.LeaveTypeId"></select>
                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary" />
                        <a asp-action="Index" class="mb-2 mr-2 btn-icon btn-pill btn btn-outline-primary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
